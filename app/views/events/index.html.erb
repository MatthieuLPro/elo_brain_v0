<div class="container">
	<div class="row">
		<h1>Index Events</h1>
	</div>
	<div class="row">
		<% ["t7", "smbu", "sc", "gg"].each do |game| %>
			<% if Event.find_by(event_game: game) %>
				<div class="col-md-2"><%= link_to "All Events #{game.upcase}", event_game_path(Event.find_by(event_game: game)), class: "btn btn-primary" %></div>
			<% end %>
		<% end %>
	</div>
	<br/>
	<div class="row">
		<table class="table">
			<tr>
				<th>Id</th>
				<th>Nom tournoi</th>
				<th>Date tournoi</th>
				<th>ID tournoi Smashgg</th>
				<th>ID Event Smashgg</th>
				<th>ID</th>
				<th>Place</th>
				<th>Game</th>
				<th>Nb participant</th>
				<th>Nb match</th>
				<th>Platform</th>
			</tr>
			<% @events.each do |event| %>
				<tr>
					<td><%= event.id %></td>
					<td><%= event.tournoi_name %></td>
					<td><%= event.tournoi_date %></td>
					<td><%= event.sgtournoi_id %></td>
					<td><%= event.sgevent_id %></td>
					<td><%= event.id %></td>
					<td><%= event.tournoi_place %></td>
					<td><%= event.event_game %></td>
					<td><%= event.nb_participant %></td>
					<td><%= event.nb_match %></td>
					<td><%= event.platform %></td>
				</tr>
			<% end %>
		</table>
		<div><%= link_to "Generate new event", new_event_path %></div>
	</div>
</div>