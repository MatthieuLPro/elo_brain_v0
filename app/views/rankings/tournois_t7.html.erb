<div class="container">
	<div class="row">
		<div class="col-md-4 offset-md-4">
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr align="center">
							<th colspan="2" style="border-top: none;">Région statistics</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td style="border-right: 1px solid #999" align="right">Début</td>
							<td></td>
						</tr>
						<tr>
							<td style="border-right: 1px solid #999" align="right">Last update</td>
							<td></td>
						</tr>
						<tr>
							<td style="border-right: 1px solid #999" align="right">Total players</td>
							<td><%= Player.where(place: "paris", game: "t7").count %></td>
						</tr>
						<tr>
							<td style="border-right: 1px solid #999" align="right">Active players</td>
							<td></td>
						</tr>
						<tr>
							<td style="border-right: 1px solid #999" align="right">Match</td>
							<td></td>
						</tr>
						<tr>
							<td style="border-right: 1px solid #999" align="right">Tournois</td>
							<td><%= Event.where(tournoi_place: "paris").count %></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<div class="container-fluid">
	<div class="row">
		<div class="col-md-5 offset-md-1">
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr align="center">
							<th>Date</th>
							<th>Lieu</th>
							<th>Nom</th>
							<th>Saison</th>
							<th>Nombre de participant</th>
							<th>Nombre de match</th>
						</tr>
					</thead>
					<tbody>
						<% @tournoi_all.each do |event| %>
							<tr align="center">
								<td><%= event.tournoi_date %></td>
								<td><%= event.tournoi_place %></td>
								<td><%= event.tournoi_name %></td>
								<td><%= event.saison %></td>
								<td><%= event.nb_participant %></td>
								<td><%= event.nb_match %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
		<div class="col-md-5">
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr align="center">
							<th>Date</th>
							<th>Lieu</th>
							<th>Nom</th>
							<th>Saison</th>
							<th>Nombre de participant</th>
							<th>Nombre de match</th>
						</tr>
					</thead>
					<tbody>
						<% @tournoi_saison.each do |event| %>
							<tr align="center">
								<td><%= event.tournoi_date %></td>
								<td><%= event.tournoi_place %></td>
								<td><%= event.tournoi_name %></td>
								<td><%= event.saison %></td>
								<td><%= event.nb_participant %></td>
								<td><%= event.nb_match %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>